<% if has_role?(:admin) %>
	<div style="width: 300px">
		<%= link_to "Создать проект", new_project_url, class: "btn btn-primary btn-lg btn-block" %>
	</div>
<% end %>
<h3>Список проектов</h3>
<div class="table-responsive">
	<table class="table table-striped table-sm">
		<tbody>
			<thead>
				<tr>
					<th>Название проекта</th>
					<th>Постановщик</th>
					<% if has_role?(:admin) %>
						<th>Опции</th>
					<% end %>
				</tr>
			</thead>
			<% if can? :read, :projects %>
				<% @projects.each do |f| %>
					<tr>
						<td>
							<%= link_to f.project_title, f %>
						</td>
						<td>
							<!-- fix this shit pls. I dont understand how to use methods in views -->
							<% def many_users(f, email) %>
								<%= f.user.each{ |user| user.email } %>
							<% end %>
						</td>
						<% if has_role?(:admin) %>
							<td>
								<%= link_to 'Изменить', edit_project_path(f) %> |
								<%= link_to 'Удалить', project_path(f), method: :delete, data: { confirm: 'Вы уверены?' } %>
							</td>
						<% end %>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
