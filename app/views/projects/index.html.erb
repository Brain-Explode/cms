<h1>Список проектов</h1>
<% @projects.each do |f| %>
	<table style="border: black 1px solid;">
		<tbody>
			<tr style="background-color: #cccccc">
				<td style="width:300px;padding-left:3px;border: black 1px solid;"><%= link_to f.project_title, f %></td>
				<td style="padding-left:3px;border: black 1px solid;"><%= link_to 'Изменить', edit_project_path(f) %></td>
				<td style="padding-left:3px;border: black 1px solid;"><%= link_to 'Удалить', project_path(f), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
			</tr>
		</tbody>
	</table>
<%end%>
