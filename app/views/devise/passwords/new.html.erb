<div class="form-signin">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<h1 class="h3 mb-3 font-weight-normal" align="center">Восстановить пароль</h1>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email адрес' %>
  </div>

  <div class="actions">
    <%= f.submit "Восстановить", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
