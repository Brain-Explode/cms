<div class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<h1 class="h3 mb-3 font-weight-normal" align="center">Зарегистрироваться</h1>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email адрес' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Пароль' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Подтвердите пароль' %>
  </div>

    <%= f.submit "Зарегистрироваться", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>
